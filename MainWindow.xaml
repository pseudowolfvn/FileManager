<Window x:Class="FileManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Button x:Name="button" Content="Button" Margin="0" Grid.Row="2"/>
        <Button x:Name="button1" Content="Button" Margin="0" Grid.Column="1" Grid.Row="2"/>
        <Button x:Name="button2" Content="Button" Margin="0" Grid.Column="2" Grid.Row="2"/>
        <Button x:Name="button3" Content="Button" Margin="0" Grid.Column="3" Grid.Row="2"/>
        <Button x:Name="button4" Content="Button" Margin="0" Grid.Column="4" Grid.Row="2"/>
        <Button x:Name="button5" Content="Button" Margin="0" Grid.Column="5" Grid.Row="2"/>
        <Grid Margin="0" Grid.ColumnSpan="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Menu x:Name="menu">
                <MenuItem Width="40">
                    <MenuItem.Header>
                        <TextBlock Text="File" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </MenuItem.Header>
                </MenuItem>    
            </Menu>
            <Menu x:Name="menu1" Grid.Column="1">
                <MenuItem Width="40">
                    <MenuItem.Header>
                        <TextBlock Text="Edit" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </MenuItem.Header>
                </MenuItem>
            </Menu>
            <Menu x:Name="menu2" Grid.Column="2">
                <MenuItem Width="40">
                    <MenuItem.Header>
                        <TextBlock Text="View" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </MenuItem.Header>
                </MenuItem>
            </Menu>
            <Menu x:Name="menu3" Grid.Column="3">
                <MenuItem Width="40">
                    <MenuItem.Header>
                        <TextBlock Text="Help" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </MenuItem.Header>
                </MenuItem>
            </Menu>
        </Grid>
        <ListView x:Name="listView" Grid.ColumnSpan="3" Margin="5,0" Grid.Row="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <ListView x:Name="listView1" Grid.Column="3" Margin="5,0" Grid.Row="1" Grid.ColumnSpan="3">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
