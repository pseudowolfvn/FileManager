<Window x:Class="FileManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="576" Width="1024" MinWidth="850" MinHeight="550">
    <Grid Margin="-0.5,0,0.5,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width= "50*"/>
            <ColumnDefinition Width= "50*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <TreeView x:Name="treeView" Loaded="treeView_Loaded" Grid.Row="1" MinWidth="100" MinHeight="200" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Width="410" Height="400" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TreeView x:Name="treeView1" Loaded="treeView_Loaded" Grid.Column="1" Grid.Row="1" MinWidth="100" MinHeight="200" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" HorizontalAlignment="Center" VerticalAlignment="Center" Width="410" Height="400" />
        <ToolBar x:Name="toolBar" Height="35" ToolBarTray.IsLocked="True" VerticalAlignment="Top" Grid.ColumnSpan="2">
            <ToolBar.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="White" Offset="0"/>
                    <GradientStop Color="#FFFFFBFF" Offset="0.5"/>
                    <GradientStop Color="#FF348AE0" Offset="1"/>
                </LinearGradientBrush>
            </ToolBar.Background>
            <MenuItem Header="MenuItem" Margin="0,10,0,0" Width="122"/>
            <MenuItem Header="MenuItem" Width="122" Margin="0,10,0,0"/>
            <MenuItem Header="MenuItem" Margin="0,10,0,0" Width="122"/>
            <MenuItem Header="MenuItem" Margin="0,10,0,0" Width="122"/>
        </ToolBar>
        <ComboBox x:Name="comboBox" Margin="49,0,0,10" Grid.Row="2" Width="70" HorizontalAlignment="Center"/>
        <ComboBox x:Name="comboBox1" Margin="49,0,0,10" Grid.Row="2" Grid.Column="1" Width="70" HorizontalAlignment="Center"/>
        <ToolBar x:Name="toolBar1" ToolBarTray.IsLocked="True" Grid.ColumnSpan="2" Grid.Row="3" Height="52" VerticalAlignment="Top">
            <ToolBar.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="White" Offset="0"/>
                    <GradientStop Color="#FFFFFBFF" Offset="0.5"/>
                    <GradientStop Color="#FF1E6597" Offset="1"/>
                </LinearGradientBrush>
            </ToolBar.Background>
            <Button x:Name="button" Content="Button" HorizontalAlignment="Stretch" Margin="0,0,0,5" VerticalAlignment="Stretch" Width="135"/>
            <Button x:Name="button1" Content="Button" HorizontalAlignment="Stretch" Margin="0,0,0,5" VerticalAlignment="Stretch" Width="135"/>
            <Button x:Name="button2" Content="Button" HorizontalAlignment="Stretch" Margin="0,0,0,5" VerticalAlignment="Stretch" Width="135"/>
            <Button x:Name="button3" Content="Button" HorizontalAlignment="Stretch" Margin="0,0,0,5" VerticalAlignment="Stretch" Width="135"/>
            <Button x:Name="button4" Content="Button" HorizontalAlignment="Stretch" Margin="0,0,0,5" VerticalAlignment="Stretch" Width="135"/>
            <Button x:Name="button5" Content="Button" HorizontalAlignment="Stretch" Margin="0,0,0,5"  VerticalAlignment="Stretch" Width="135"/>
        </ToolBar>

    </Grid>
</Window>
